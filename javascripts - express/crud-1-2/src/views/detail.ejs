<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'detail'}) %>
<body>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->

	<!-- product detail -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title"><%= idProducts.name %> </h2>
			</div>
		</div>
		<div class="product-detail">
			<div class="row">
				<div class="col-12 col-lg-8">
					<img src="/images/products/<%= idProducts.image %> " alt="product image" class="product-detail-img">
					<p class="product-detail-description">
						<%= idProducts.description %>					</p>
				</div>
				<div class="col-12 col-lg-4">
					<article class="product-detail-info">
						<h2 class="product-detail-title"><%= idProducts.name %></h2>
						
							<p class="product-detail-price small">
								<span>$<%= idProducts.price %></span>
								
								<b><%= idProducts.discount %>% OFF</b>
							</p>
							<p class="product-detail-price">
								<% if (idProducts != 0 ) { %>
								 
								
								$<%let precioFinal = idProducts.price - idProducts.price * idProducts.discount / 100  %>
								<%= precioFinal %> 
								<% }else{ %>
							</p>
							<p class="product-detail-price">
								$<%= idProducts.price %> 
							</p>
<% } %> 
						<ul class="actions-list">
							<li>
								<i class="fas fa-credit-card"></i>
								<p>Pag√° en 12 cuotas sin interes</p>
							</li>
							<li>
								<i class="fas fa-store"></i>
								<p>Retiro gratis en locales del vendedor</p>
							</li>
						</ul>

						<a href="#" class="buy-now-button">COMPRAR AHORA</a>
						<hr>

						<a href="/products/edit/<%- idProducts.id %>" class="action-button edit" >EDITAR PRODUCTO</a>
						<form action="/products/delete/<%- idProducts.id %>?_method=DELETE" method="POST" style="display: inline-flex">
							<button type="submit" class="action-button delete">ELIMINAR</button>
						</form>
					</article>
				</div>
			</div>
		</div>
	</div>
	<!-- /product detail -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->

</body>	
</html>